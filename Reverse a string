#include <iostream.h>
#include <conio.h>

 int main()
 {
 const int max = 80;
 char str[max];
 int count = 0;
int i = 0;
cout<<"Enter a string ;\n\n";
cin.getline(str,max,'\n');
cout<<"\n\t\t\t";
 while(str[count] != '\0')
count++;
for(i = count; i >=0; i--)

{
 cout<<str[i];
}
getch();
 return 0;
 }
