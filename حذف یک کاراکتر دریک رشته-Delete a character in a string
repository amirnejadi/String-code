#include <conio.h>
#include <iostream.h>
#include <stdio.h>

void main()
{char s[100],ch; int j,n=100;
clrscr();
cout<<"reshte ra vared konid :"<<endl;
gets(s);
cout<<"harfi ke mikhahid az reshte pak shavad ra vared konid"<<endl;
cin>>ch;
for(int i=0;i<n;i++)
if(ch==s[i]){
n--;
for(j=i;j<n;j++)
s[j]=s[j+1];
s[j]=0;
i--;}
puts(s);
getch();}
